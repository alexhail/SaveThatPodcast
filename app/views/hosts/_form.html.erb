<%= form_for(@host, method: method, html: { autocomplete: :off }) do |f| %>
  <div class="form-content">
    <div class="form-row">
      <label for="host_hid">Host ID</label>
      <%= f.text_field :_hid, required: true, readonly: true %>
    </div>
    <div class="form-row">
      <%= f.label :name %>
      <%= f.text_field :name, required: true %>
    </div>
    <div class="form-row">
      <%= f.label :titles %>
      <%= f.text_field :titles, value: @host.titles.join(", "), required: true %>
    </div>
    <div class="form-row">
      <%= f.label :image %>
      <%= f.text_field :image %>
    </div>
    <div class="form-row">
      <%= f.label :bio %>
      <%= f.text_area :bio %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit method == :post ? "Create Host" : "Update Host", class: 'form-button' %>
  </div>
<% end %>
